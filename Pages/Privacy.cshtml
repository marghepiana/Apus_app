@page
@model PrivacyModel
@{
    ViewData["Title"] = "Pumping System";
}
<h1>@ViewData["Title"]</h1>

<div>
    <p>Control the flow rate of the pumps</p>

  </div>

        <div>
            <!-- Input box for user value -->
            <input id="userInput" type="text" placeholder="Enter value here">
        </div>

        <div>
            <button id="myButton" type="button">Start</button>
            <button id="resetButton" type="button">Reset</button>
            <button id="pauseButton" type="button">Pause</button>
        </div>

        <style>
            /* Default button and input styles */
            #myButton, #resetButton, #pauseButton {
                background-color: white;
                color: black;
                border: 2px solid black;
                margin-right: 10px; /* Add some spacing between buttons */
            }

            #userInput {
                border: 2px solid black;
                padding: 5px;
                margin-right: 10px;
                margin-bottom: 10px; /* Add margin to separate from buttons */
            }
            /* Style for clicked buttons */
            .clicked {
                color: white;
            }
            /* Style for the Start button when clicked */
            #myButton.clicked {
                background-color: green;
            }
            /* Style for the Reset button when clicked */
            #resetButton.clicked {
                background-color: red;
            }
            /* Style for the Pause button when clicked */
            #pauseButton.clicked {
                background-color: yellow;
            }
        </style>

        <script>document.addEventListener('DOMContentLoaded', function () {
                const buttons = document.querySelectorAll('button'); // Select all buttons
                const userInput = document.getElementById('userInput'); // Select the input box

                buttons.forEach(function (button) {
                    button.addEventListener('click', function () {
                        buttons.forEach(function (btn) {
                            btn.classList.remove('clicked'); // Reset all buttons
                        });
                        button.classList.add('clicked'); // Add 'clicked' class to the clicked button
                    });
                });

                userInput.addEventListener('input', function () {
                    // You can access the user input value using userInput.value
                    console.log('User entered:', userInput.value);
                });
            });</script>
